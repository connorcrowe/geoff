{
    "id": 59,
    "user_query": "Show transit stops within 100m of schools",
    "embedding_version": 0,
    "last_embedded": "",
    
    "metadata": {
        "tables": ["transit_stops", "schools"],
        "components": ["simple_select", "spatial_filter", "context_layer"]
    },
    
    "plan": {
        "layers": [
            {
                "layer_name": "transit_stops_near_schools",
                "layer_type": "primary",
                "query": {
                    "type": "select",
                    "table": "transit_stops",
                    "distinct": true,
                    "columns": [
                        {"name": "id"},
                        {"name": "name"},
                        {"name": "wheelchair_boarding"},
                        {"name": "geometry", "expression": "ST_AsGeoJSON(geometry)", "alias": "geometry"}
                    ],
                    "spatial_filters": [
                        {
                            "operation": "ST_DWithin",
                            "target_table": "schools",
                            "distance": 100,
                            "use_exists": true
                        }
                    ]
                }
            },
            {
                "layer_name": "schools",
                "layer_type": "context",
                "query": {
                    "type": "select",
                    "table": "schools",
                    "columns": [
                        {"name": "name"},
                        {"name": "address"},
                        {"name": "geometry", "expression": "ST_AsGeoJSON(geometry)", "alias": "geometry"}
                    ]
                }
            }
        ]
    }
}